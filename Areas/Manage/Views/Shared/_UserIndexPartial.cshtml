@model List<AppUser>
@{
    int no = 0;
}
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg  " style="padding-top:40px">
    @foreach (AppUser appUser in Model)
    {
        no++;
        <tr>
            <td>@no</td>
            <td>@appUser.Name</td>
            <td>@appUser.Surname</td>
            <td>@appUser.Role</td>
            <td class="text @(appUser.IsDeActive ? "text-danger":"text-success")">@(appUser.IsDeActive ? "DeActive":"Active")</td>
            <td>
                @if (appUser.IsDeActive)
                {
                    <a class="btn btn-primary deleteandrestorebtn" asp-area="manage" asp-controller="user" asp-action="Activate" asp-route-id="@appUser.Id" asp-route-status="@ViewBag.Status">Activate</a>
                }
                else
                {
                    <a class="btn btn-danger deleteandrestorebtn" asp-area="manage" asp-controller="user" asp-action="Deactivate" asp-route-id="@appUser.Id" asp-route-status="@ViewBag.Status">Deactive</a>
                }
                <a class="btn btn-warning" asp-area="manage" asp-controller="user" asp-action="ResetPassword" asp-route-id="@appUser.Id">Reset Password</a>
            </td>
        </tr>
    }


</main>
