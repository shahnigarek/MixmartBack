@model AboutVM
@{
    ViewData["Title"] = "Index";
}

<div class="title-bar"
     style="background-image: url(/assets/images/index/shop/breadcrumb_bkg2.jpg);background-size: cover;background-position: center;padding: 45px 0px;">
    <div class="container">
        <div class="row">
            <div class="title-bar-text" style="text-align: center;">
                <div class="title-bar-header" style="margin-bottom: 20px;">
                    <h1 style="color:#3a3d46;font-family: rufina;font-size: 52px;">About Us</h1>
                </div>
                <div class="title-bar-breadcrumb">
                    <span style="color: #777777;font-size: 15px;">Home</span>
                    <i style="color: #777777;font-size: 8px;padding: 0 10px;" class="fa-solid fa-chevron-right"></i>
                    <span style="color: #3a3d46;font-size: 15px;">About Us</span>
                </div>
            </div>
        </div>
    </div>
</div>

<main class="about">
    <div class="row">
        <div class="phrase">
            <div class="imgabout" data-aos="zoom-in">
                <img src="~/assets/images/index/blog/@Model.About.Image" alt="">
            </div>
            <div class="phrasetext" data-aos="fade-up">
                <p>
                    “@Model.About.Phrase”
                </p>
            </div>
        </div>
        <div class="brands" data-aos="fade-up">
            @foreach (Brand brand in Model.Brands)
            {
                <div class="brandimg col-lg-2"><img src="~/assets/images/index/brand/@brand.Image" alt=""></div>

            }

        </div>
        <div class="brandslider">
            @foreach (Brand brand in Model.Brands)
            {
                <div class="brandimg"><img src="~/assets/images/index/brand/@brand.Image" alt=""></div>

            }

        </div>
        <div class="brandslider1">
            @foreach (Brand brand in Model.Brands)
            {
                <div class="brandimg col-lg-2"><img src="~/assets/images/index/brand/@brand.Image" alt=""></div>

            }

        </div>
        <div class="story">
            <div class="storytext" data-aos="fade-up">
                <p class="s">@Model.Story.Title</p>
                <p>
                    @Html.Raw(Model.Story.Description)
                </p>
                <a href=""><button>Shop Now</button></a>
            </div>
            <div class="storyvideo col-lg-3" style="background-image: url(/assets/images/index/error/@Model.Story.Image);">
                <div class="playicon">
                    <a href="@Model.Story.VideoUrl"><i class="fa-solid fa-play"></i></a>
                </div>
            </div>
        </div>
        <div class="services" data-aos="fade-up">
            @foreach (Service service in Model.Services)
            {
                <div class="servicecontent col-lg-3 col-md-6">
                    <div class="serviceicon">@Html.Raw(service.Icon)</div>
                    <div class="servicetext">
                        <h3>@service.Title</h3>
                        <p>@service.Description</p>
                    </div>
                </div>

            }

        </div>
        <div class="team">
            <div class="top" style="text-align: center;" data-aos="fade-up">
                <div class="team-text">
                    <p>SHOP BY CATEGORIES</p>
                </div>
                <div class="team-image">
                    <h2 style="font-size: 62px;color: #3a3d46;">Team Members</h2>
                </div>
            </div>
            <div class="teammembers" style="display: flex;margin-bottom: 140px;" data-aos="fade-up">
                @foreach (Team team in Model.Teams)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="memberimage"><img src="~/assets/images/index/team/@team.Image" alt=""></div>

                        <div class="memberinfo">
                            <p class="name">@team.FullName </p>
                            <p class="position">@team.Position.Name</p>
                        </div>
                   

                    </div>

                }

            </div>
        </div>
    </div>
</main>

